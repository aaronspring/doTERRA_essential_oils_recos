# doTERRA Essential Oils Recommendations - Environment Variables
# Copy this file to .env and fill in the values

# Qdrant Vector Database Configuration
QDRANT_HOST = "your_qdrant_host_here"
QDRANT_PORT = 6333
QDRANT_COLLECTION = essential_oils
QDRANT_API_KEY="your_qdrant_api_key_here"

# Perplexity API Configuration
# Get API key from https://www.perplexity.ai
# Uses OpenAI-compatible API endpoints
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=sonar-pro

# Langfuse Tracing Configuration (optional)
# Get these from https://cloud.langfuse.com
# LANGFUSE_PUBLIC_KEY=your_public_key_here
# LANGFUSE_SECRET_KEY=your_secret_key_here
# LANGFUSE_HOST=https://cloud.langfuse.com

# Embedding Model Configuration
# MODEL_NAME is hardcoded in config.py, but can be overridden here
# MODEL_NAME=jinaai/jina-embeddings-v2-base-de

# Backend Server Configuration
# HOST=0.0.0.0
# PORT=8000

# Production Environment
# ENVIRONMENT=production

# CORS Configuration
# Comma-separated list of allowed origins for CORS (e.g., "http://localhost:5173,https://example.com")
# ALLOWED_ORIGINS=http://localhost:5173
